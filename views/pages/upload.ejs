<!DOCTYPE html>
<html>
<% include ../partials/head %>
  <body>
    <% include ../partials/nav %>
    <main class="container">
      <div class="row">
        <div id="message" class="col-xs-offset-2 col-xs-8 message"></div>
      </div>
      <form id="uploadForm" method="post" action="/session" class="col offset-s2 s8">
        <div class="row">
          <div class="col-xs-offset-2 col-xs-8">
            Upload a CSV file:<br><br>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-offset-2 col-xs-8">
            <input placeholder="File" id="file" type="file" name="uploads[]" multiple="multiple">
            <label for="file">File</label><br><br>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-offset-2 col-xs-8">
          <button type="submit">Upload</button>
        </div>
      </form>
    </main>
    <script type="text/javascript" src="javascripts/upload.js"></script>
<% include ../partials/footer %>
</body>
</html>

