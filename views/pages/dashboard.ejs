<!DOCTYPE html>
<html>
<% include ../partials/head %>
<body>
<% include ../partials/nav %>
<main>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center">
        <h1>Parts</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 text-center">
        <table class="table table-bordered table-striped">
          <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Material</th>
            <th class="text-center">Price</th>
            <th class="text-center">Width</th>
            <th class="text-center">Height</th>
            <th class="text-center">Depth</th>
            <th class="text-center">Volume</th>
            <th class="text-center">Weight</th>
            <th class="text-center">Print Time</th>
            <th class="text-center">Order Size</th>
            <th class="text-center">Annual Quantity</th>
            <th class="text-center"></th>
          </tr>
        <% parts.forEach((part) => { %>
          <tr>
            <td><%= part.name %></td>
            <td><% if (part.material !== null) { %>
            <%= part.material.name %>
            <% } %></td>
            <td>$<%= part.price %></td>
            <td><%= part.width %></td>
            <td><%= part.height %></td>
            <td><%= part.depth %></td>
            <td><%= part.volume %></td>
            <td><%= part.weight %></td>
            <td><%= part.printTime %></td>
            <td><%= part.minOrder %></td>
            <td><%= part.annualOrder %></td>
            <td>
              <% if (!part.isValid) { %>
                <span class="glyphicon glyphicon-alert orange" aria-hidden="true"></span>
              <% } else { %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>              
              <% } %>
            </td>
            
          </tr>
        <% }); %>
        </table>
      </div>
    </div>
</main>
<% include ../partials/footer %>
</body>
</html>
